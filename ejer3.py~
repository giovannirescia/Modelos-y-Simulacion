from random import random

def get_min():
    s=0.0
    n=0
    while s<1.0:
        s+=random()
        n+=1
    return n

def estimation(n):
    estimations=0.0
    for i in range(0,n):
        estimations+=get_min()
    return estimations/float(n)

N=[10**2,10**3,10**4,10**5,10**6]

for i in N:
    print i,"=>",repr(estimation(i))
